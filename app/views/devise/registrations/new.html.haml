%body.main1
  .page1
    .asec.apadmid.auwork
      .asec.aspacnone.aunav
        .asec.aspecmed.atexcen
          = link_to image_tag("http://furima.tokyo/assets/logo-d3d78326971d78b06e3d6f0ba666d025a8ad681286b4d9e00e7dbe8673bcfd23.svg"), '#'
      .asec.centersec
        .asec.mainsec
          .asec.aupagecont
            .asec
              %form.asnone
                = form_for(@user, url: user_registration_path) do |f|
                  = render "devise/shared/error_messages", resource: @user
                  .abox.aexlarge
                    .aboxin
                      %h1.asmall
                        新規登録フォーム (STEP1)
                      .arow.abase
                        .field
                        = f.label :ニックネーム
                        %span.form_require
                          必須
                      = f.text_field :name, placeholder: "例) FURIMA太郎", class: "input_default"
                      .arfmgroup
                        .arow.abase
                          .field
                          = f.label :Eメールアドレス
                          %span.form_require
                            必須
                        = f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"PC・携帯どちらでも可", class: "input_default"
                        -#%input.aintext.a12.aurefield.aurefieldma.aurefieldema.aurepassvali{placeholder: "PC・携帯どちらでも可"}
                      .arfmgroup
                        .arow.abase
                          .field
                          = f.label :パスワード
                          %span.form_require
                            必須
                        = f.password_field :password, autofocus: true, autocomplete: "password", placeholder: "7文字以上の半角英数字", class: "input_default"
                        %p.form_info
                          =fa_icon "exclamation-triangle"
                          英字と数字を含めて7文字以上で設定してください
                        .arow.abase
                          .field
                          = f.label :もう一度パスワードを入力してください
                          %span.form_require
                            必須
                        = f.password_field :encrypted_password, autofocus: true, autocomplete: "encrypted_password", placeholder: "7文字以上の半角英数字", class: "input_default"
                        .arow.abase
                          %label.aflabel
                            お名前（全角）
                          %span.form_require
                            必須
                        = f.text_field :first_name, placeholder: "例) 山田", class: "input_default"
                        = f.text_field :last_name, placeholder: "例) 次郎", class: "input_default"
                        .arfmgroup
                          .arow.abase
                            %label.aflabel
                              お名前カナ（全角）
                            %span.form_require
                              必須
                        = f.text_field :first_name_kana, placeholder: "例) ヤマダ", class: "input_default"
                        = f.text_field :last_name_kana, placeholder: "例) ジロウ", class: "input_default"
                        .arfmgroup
                          .arow.abase
                            %label.aflabel
                              生年月日
                            %span.form_require
                              必須
                          = f.date_select :birthday, prompt:"--", use_month_numbers: true, start_year:Time.now.year-10, end_year:1900  #date_separator:'%s', '年'+'月'+'日'
                      %span.abtn.abtnnor.abtn12.abtnpri
                        %span.abtnin
                          %span.abtext
                            = f.submit "STEP2へ進む",class: "abtn"
                      .arow
                        すでにアカウントをお持ちですか?
                        = link_to '#' do
                          ログイン
                      





