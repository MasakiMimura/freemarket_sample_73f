%body.main1
  .page1
    .asec.apadmid.auwork
      .asec.aspacnone.aunav
        .asec.aspecmed.atexcen
          = link_to image_tag("http://furima.tokyo/assets/logo-d3d78326971d78b06e3d6f0ba666d025a8ad681286b4d9e00e7dbe8673bcfd23.svg"), '#'
      .asec.centersec
        .asec.mainsec
          .asec.aupagecont
            .asec
              .asnone
                = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
                  = render "devise/shared/error_messages", resource: @user
                  .abox.aexlarge
                    .aboxin
                      %h1.asmall
                        新規登録フォーム (STEP1)
                      .arfmgroup
                        .arow.abase
                          .field
                          = f.label :name,"ニックネーム"
                          %span.form_require
                            必須
                        = f.text_field :name, autofocus: true, placeholder: "例) FURIMA太郎", class: "input_default"
                      .arfmgroup
                        .arow.abase
                          .field
                          = f.label :email,"Eメールアドレス"
                          %span.form_require
                            必須
                        = f.email_field :email, autocomplete: "email",placeholder:"PC・携帯どちらでも可", class: "input_default"
                      .arfmgroup
                        .arow.abase
                          .field
                          = f.label :password,"パスワード"
                          %span.form_require
                            必須
                        = f.password_field :password, autocomplete: "password", placeholder: "7文字以上の半角英数字", class: "input_default"
                        %p.form_info
                          =fa_icon "exclamation-triangle"
                          英字と数字を含めて7文字以上で設定してください
                        .arow.abase
                          .field
                          = f.label :password_confirmation,"もう一度パスワードを入力してください"
                          %span.form_require
                            必須
                        = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "7文字以上の半角英数字", class: "input_default"
                        .arfmgroup
                          .arow.abase
                          = f.label :"お名前(全角)"
                          %span.form_require
                            必須
                        = f.text_field :first_name, placeholder: "例) 山田", class: "input_default"
                        = f.text_field :last_name, placeholder: "例) 次郎", class: "input_default"
                        .arfmgroup
                          .arow.abase
                            = f.label :"ふりがな（全角）"
                            %span.form_require
                              必須
                        = f.text_field :first_name_kana, placeholder: "例) やまだ", class: "input_default"
                        = f.text_field :last_name_kana, placeholder: "例) じろう", class: "input_default"
                        .arfmgroup
                          .arow.abase
                            = f.label :birthday,"生年月日"
                            %span.form_require
                              必須
                        /= f.date_select :birthday, prompt:"--", use_month_numbers: true, start_year:Time.now.year-10, end_year:1900  #date_separator:'%s', '年'+'月'+'日'
                        /!= sprintf(f.date_select(:birthday, prefix:'birthday',with_css_classes:'bd', prompt:"--",use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'),'年','月')+'日'
                        != sprintf(f.date_select(:birthday, with_css_classes:'birthday', prompt:"--", use_month_numbers: true,start_year: (Time.now.year - 10), end_year: 1930, default: Date.new, date_separator:'%s'),'年','月')+'日'
                      .abtnin
                        .actions
                          = f.submit "STEP2へ進む",class: "abtn"
                      .arow
                        すでにアカウントをお持ちですか?
                        = link_to "ログイン", new_user_session_path
                      





